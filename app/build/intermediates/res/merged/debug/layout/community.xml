<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:fillViewport="true"
	android:keepScreenOn="true"
	android:minHeight="450dip"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<!-- Results Text -->

		<TextView
			android:id="@+id/community_statement"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Community Profile"
			android:textColor="#000000"
			android:textSize="30dip"
			android:textStyle="bold"
			android:layout_marginLeft="20dip" />

		<View
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:layout_marginTop="2dip"
			android:layout_marginBottom="2dip"
			android:background="@android:color/darker_gray" />

		<LinearLayout
			android:id="@+id/community_voter_number_chart"
			android:layout_margin="10dip"
			android:layout_gravity="center"
			android:layout_width="350dip"
			android:layout_height="300dip"
			android:background="@drawable/imgborder"
			android:orientation="horizontal" />

		<!-- Demographics based results text -->

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="10dip"
			android:text="Demographics Based Results"
			android:textColor="#000000"
			android:textSize="20sp"
			android:textStyle="bold" />

		<!-- Gender based distribution -->

		<LinearLayout
			android:id="@+id/community_gender_chart"
			android:layout_margin="10dip"
			android:layout_gravity="center"
			android:layout_width="350dip"
			android:layout_height="300dip"
			android:background="@drawable/imgborder"
			android:orientation="horizontal" />

		<!-- Age based distribution -->

		<LinearLayout
			android:id="@+id/community_age_chart"
			android:layout_margin="10dip"
			android:layout_gravity="center"
			android:layout_width="350dip"
			android:layout_height="300dip"
			android:background="@drawable/imgborder"
			android:orientation="horizontal" />

		<!-- Continent based distribution -->

		<LinearLayout
			android:id="@+id/community_continent_chart"
			android:layout_margin="10dip"
			android:layout_gravity="center"
			android:layout_width="350dip"
			android:layout_height="300dip"
			android:background="@drawable/imgborder"
			android:orientation="horizontal" />

		<!-- Education based distribution -->

		<LinearLayout
			android:id="@+id/community_education_chart"
			android:layout_margin="10dip"
			android:layout_gravity="center"
			android:layout_width="350dip"
			android:layout_height="300dip"
			android:background="@drawable/imgborder"
			android:orientation="horizontal" />

		<!-- Race based distribution -->

		<LinearLayout
			android:id="@+id/community_race_chart"
			android:layout_margin="10dip"
			android:layout_gravity="center"
			android:layout_width="350dip"
			android:layout_height="300dip"
			android:background="@drawable/imgborder"
			android:orientation="horizontal" />

		<!-- Race based distribution -->

		<LinearLayout
			android:id="@+id/community_religion_chart"
			android:layout_margin="10dip"
			android:layout_gravity="center"
			android:layout_width="350dip"
			android:layout_height="300dip"
			android:background="@drawable/imgborder"
			android:orientation="horizontal" />

	</LinearLayout>
</ScrollView><!-- From: file:/C:/Users/Fahad/Desktop/RaiPoll/app/src/main/res/layout/community.xml -->