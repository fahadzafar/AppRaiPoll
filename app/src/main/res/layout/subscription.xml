<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/subscription_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="30dip"
			android:text="Categories subscribed here appear in your home tab."
			android:textSize="16dip" />

		<ListView
			android:id="@+id/subscription_listview"
			android:layout_width="match_parent"
			android:layout_height="396dp"
			android:background="@drawable/imgborder" >
		</ListView>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal" >

			<Button
				android:id="@+id/subscription_update"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="Update" />

			<!--  <Button
				android:id="@+id/subscription_cancel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="Cancel" />-->
		</LinearLayout>
	</LinearLayout>

</ScrollView>